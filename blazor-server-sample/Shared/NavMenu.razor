<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Paymongo.Sharp Sample</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="links">
                <span class="oi oi-credit-card" aria-hidden="true"></span> Links
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="checkouts">
                <span class="oi oi-credit-card" aria-hidden="true"></span> Checkout
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="sources">
                <span class="oi oi-credit-card" aria-hidden="true"></span> Sources
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="refunds">
                <span class="oi oi-credit-card" aria-hidden="true"></span> Refunds
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}